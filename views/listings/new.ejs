    <div class="row mt-4">

        <div class="col-8 offset-2">

        
    
    <h1>Create A New Listing</h1>

    <form action="/listings" method="POST">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" placeholder="Enter name of your villa" class="form-control">
        </div>
        
        

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input type="text" name="listing[description]" placeholder="Enter description" class="form-control">
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="text" name="listing[image]" placeholder="Enter image link" class="form-control">
        </div>
        
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" placeholder="Enter price" class="form-control">
        </div>
        
        <div class="row">

            <div class="mb-3 col-md-4" >   
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" placeholder="Enter location" class="form-control">
            </div>
            
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" placeholder="Enter country" class="form-control">
            </div>

        </div>
        
        <br><br>
        <button class="btn btn-dark add-btn mb-4">Submit</button>
    </form>
    </div>
</div>

